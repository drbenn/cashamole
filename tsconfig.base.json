{
  "compilerOptions": {
    // Base directory for resolving modules
    "baseUrl": "./", 
    
    // Set compiler target and module resolution standards
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    // Define the global alias relative to the monorepo root
    "paths": {
      // Points @common-types/* to the server's common-types folder
      "@common-types/*": ["server/common-types/*"]
    }
  },
}